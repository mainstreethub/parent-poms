<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.mainstreethub</groupId>
    <artifactId>ecs-parent-pom</artifactId>
    <version>1.0.0</version>
  </parent>

  <groupId>com.mainstreethub</groupId>
  <artifactId>dropwizard-parent-pom</artifactId>
  <version>0.8.5-1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <scm>
    <url>https://github.com/mainstreethub/parent-poms</url>
    <connection>scm:git:git@github.com:mainstreethub/parent-poms</connection>
    <developerConnection>scm:git:git@github.com:mainstreethub/parent-poms</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <dropwizard.version>0.8.5</dropwizard.version>

    <!--
      These versions should remain consistent with the version of Dropwizard being specified.
      Don't just update the version of Dropwizard above and not update the versions of the
      bundles/dependencies.

      Also don't add anything to this pom that isn't directly influenced by dropwizard.  The
      idea is that these dependencies should only ever change versions when we upgrade to a
      newer version of dropwizard.
    -->
    <dropwizard.api.key.bundle.version>0.8.5</dropwizard.api.key.bundle.version>
    <dropwizard.configurable.assets.bundle.version>0.8.5</dropwizard.configurable.assets.bundle.version>
    <dropwizard.metrics.datadog.ecs.version>0.1.0</dropwizard.metrics.datadog.ecs.version>
    <dropwizard.redirect.bundle.version>0.8.5</dropwizard.redirect.bundle.version>
    <dropwizard.template.config.version>1.2.0</dropwizard.template.config.version>
    <dropwizard.version.bundle.version>0.8.5</dropwizard.version.bundle.version>
    <dropwizard.webjars.bundle.version>0.8.5</dropwizard.webjars.bundle.version>
    <guava.version>18.0</guava.version>
    <jackson.api.version>2.5.0</jackson.api.version>
    <jackson.version>2.5.1</jackson.version>
    <slf4j.version>1.7.10</slf4j.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>docker-image</id>
            <phase>package</phase>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <images>
                <image>
                  <build>
                    <labels>
                      <com.mainstreethub.log-format>dropwizard</com.mainstreethub.log-format>
                    </labels>
                    <ports>
                      <port>8080</port>
                      <port>8081</port>
                    </ports>
                    <cmd>
                      <arg>server</arg>
                      <arg>classpath://config.yaml</arg>
                    </cmd>
                  </build>
                </image>
              </images>
            </configuration>
          </execution>
        </executions>
      </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <!-- During release, make the tag contain the project name since this is a shared repo. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagNameFormat>@{project.artifactId}-v@{project.version}</tagNameFormat>
        </configuration>
        <executions>
          <execution>
            <id>default</id>
            <goals>
              <goal>perform</goal>
            </goals>
            <configuration>
              <pomFileName>dropwizard-parent-pom/pom.xml</pomFileName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

